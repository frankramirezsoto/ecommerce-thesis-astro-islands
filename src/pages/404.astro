---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { buttonVariants } from '@/components/ui/button';
---
<BaseLayout title="Page Not Found">
  <div class="min-h-[60vh] flex flex-col items-center justify-center text-center gap-6 px-4">
    <div>
      <p class="text-sm uppercase tracking-widest text-muted-foreground">404</p>
      <h1 class="text-4xl font-bold mt-2 mb-4">Page Not Found</h1>
      <p class="text-muted-foreground max-w-md">
        The page you are looking for doesn't exist. Try navigating back to the homepage or explore our latest products.
      </p>
    </div>
    <div class="flex gap-4">
      <a href="/" class={buttonVariants({ size: 'lg' })}>
        Go Home
      </a>
      <a href="/products" class={buttonVariants({ variant: 'outline', size: 'lg' })}>
        Browse Products
      </a>
    </div>
  </div>
</BaseLayout>
